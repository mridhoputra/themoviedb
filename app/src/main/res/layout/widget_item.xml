<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_widget_item"
    android:layout_weight="10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_tv_backdrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/spiderman_backdrop"
        android:contentDescription="@string/img_content_desc_backdrop"
        android:layout_weight="9"/>

    <TextView
        android:id="@+id/widget_tv_movie_title"
        style="@style/content_header.white"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        tools:text="Movie Title" />

</LinearLayout>